#include <stdio.h>

int main()
{
    int courseID, choice;
    int totalCredits = 0;
    int registered[5] = {0, 0, 0, 0, 0}; // to store registered courses

    while (1)
    {
        printf("\n==== STUDENT COURSE REGISTRATION SYSTEM ====\n");
        printf("1. Show Available Courses\n");
        printf("2. Register a Course\n");
        printf("3. Drop a Course\n");
        printf("4. Show Registered Courses\n");
        printf("5. Show Total Credit Hours\n");
        printf("6. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice)
        {
        case 1:
            printf("\nAvailable Courses:\n");
            printf("1. Programming Fundamentals - 3 Credit Hours\n");
            printf("2. Islamiyat - 2 Credit Hours\n");
            printf("3. Maths - 2 Credit Hours\n");
            printf("4. English - 3 Credit Hours\n");
            printf("5. Applied Physics - 3 Credit Hours\n");
            break;

        case 2:
            printf("Enter Course ID to Register (1-5): ");
            scanf("%d", &courseID);

            if (courseID < 1 || courseID > 5)
                printf("Invalid Course ID!\n");
            else if (registered[courseID - 1] == 1)
                printf("You already registered this course!\n");
            else
            {
                registered[courseID - 1] = 1;

                if (courseID == 1 || courseID == 4 || courseID == 5)
                    totalCredits += 3;
                else if (courseID == 2 || courseID == 3)
                    totalCredits += 2;

                printf("Course Registered Successfully!\n");
            }
            break;

        case 3:
            printf("Enter Course ID to Drop (1-5): ");
            scanf("%d", &courseID);

            if (courseID < 1 || courseID > 5)
                printf("Invalid Course ID!\n");
            else if (registered[courseID - 1] == 0)
                printf("You did not register this course!\n");
            else
            {
                registered[courseID - 1] = 0;

                if (courseID == 1 || courseID == 4 || courseID == 5)
                    totalCredits -= 3;
                else if (courseID == 2 || courseID == 3)
                    totalCredits -= 2;

                printf("Course Dropped Successfully!\n");
            }
            break;

        case 4:
            printf("\nYour Registered Courses:\n");
            int found = 0;
            for (int i = 0; i < 5; i++)
            {
                if (registered[i] == 1)
                {
                    found = 1;
                    if (i == 0)
                        printf("1. Programming Fundamentals\n");
                    else if (i == 1)
                        printf("2. Islamiyat\n");
                    else if (i == 2)
                        printf("3. Maths\n");
                    else if (i == 3)
                        printf("4. English\n");
                    else if (i == 4)
                        printf("5. Applied Physics\n");
                }
            }
            if (!found)
                printf("No courses registered yet.\n");
            break;

        case 5:
            printf("Total Credit Hours: %d\n", totalCredits);
            break;

        case 6:
            printf("Thank you! Exiting...\n");
            return 0;

        default:
            printf("Invalid choice! Try again.\n");
        }
    }
}
